    <Grid x:Name="LayoutRoot">
    	<StackPanel Margin="0,0,0,660"/>
    	<StackPanel VerticalAlignment="Top" Margin="0,18,0,0">
    		<Canvas Height="435">
    			<Image x:Name="image" Height="415" Width="629" Canvas.Left="10" Canvas.Top="10" Stretch="Fill" Source="/"/>
    			<HyperlinkButton x:Name="hyperlinkButton" Content="Movimento" Canvas.Left="852" Canvas.Top="10" Height="33" Width="162" FontSize="21.333" Background="#00422407" Foreground="#FF382106">
    				<i:Interaction.Triggers>
    					<i:EventTrigger EventName="Click" SourceName="hyperlinkButton" SourceObject="{Binding ElementName=hyperlinkButton}">
    						<ei:ChangePropertyAction TargetName="image" PropertyName="Source" TargetObject="{Binding ElementName=image}">
    							<ei:ChangePropertyAction.Ease>
    								<CircleEase EasingMode="EaseIn"/>
    							</ei:ChangePropertyAction.Ease>
    							<ei:ChangePropertyAction.Value>
    								<ImageSource>/CookieHell;component/img/instrucoes1.png</ImageSource>
    							</ei:ChangePropertyAction.Value>
    						</ei:ChangePropertyAction>
    					</i:EventTrigger>
    				</i:Interaction.Triggers>
    			</HyperlinkButton>
    			<HyperlinkButton x:Name="hyperlinkButton_Copy" Content="Objetivo" Canvas.Left="852" Canvas.Top="62" Height="33" Width="162" FontSize="21.333" Background="#00422407" Foreground="#FF382106">
    				<i:Interaction.Triggers>
    					<i:EventTrigger EventName="Click" SourceName="hyperlinkButton_Copy" SourceObject="{Binding ElementName=hyperlinkButton_Copy}">
    						<ei:ChangePropertyAction TargetName="image" PropertyName="Source" TargetObject="{Binding ElementName=image}">
    							<ei:ChangePropertyAction.Ease>
    								<CircleEase EasingMode="EaseIn"/>
    							</ei:ChangePropertyAction.Ease>
    							<ei:ChangePropertyAction.Value>
    								<ImageSource>/CookieHell;component/img/instrucoes2.png</ImageSource>
    							</ei:ChangePropertyAction.Value>
    						</ei:ChangePropertyAction>
    					</i:EventTrigger>
    				</i:Interaction.Triggers>
    			</HyperlinkButton>
    			<HyperlinkButton x:Name="hyperlinkButton_Copy1" Content="Creditos" Canvas.Left="852" Canvas.Top="114" Height="33" Width="162" FontSize="21.333" Background="#00422407" Foreground="#FF382106">
    				<i:Interaction.Triggers>
    					<i:EventTrigger EventName="MouseLeftButtonDown" SourceName="hyperlinkButton_Copy1" SourceObject="{Binding ElementName=hyperlinkButton_Copy1}">
    						<ei:ChangePropertyAction TargetName="image" PropertyName="Source" TargetObject="{Binding ElementName=image}">
    							<ei:ChangePropertyAction.Ease>
    								<CircleEase EasingMode="EaseIn"/>
    							</ei:ChangePropertyAction.Ease>
    							<ei:ChangePropertyAction.Value>
    								<ImageSource>/CookieHell;component/img/instrucoes1.png</ImageSource>
    							</ei:ChangePropertyAction.Value>
    						</ei:ChangePropertyAction>
    					</i:EventTrigger>
    				</i:Interaction.Triggers>
    			</HyperlinkButton>
    		</Canvas>
    	</StackPanel>
